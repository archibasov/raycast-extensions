{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "typofixer",
  "title": "TypoFixer",
  "description": "Fix text typed with the wrong keyboard layout (English/Russian).",
  "icon": "typofixer-icon.png",
  "author": "Archibasov",
  "categories": [
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Convert Selected Text",
      "description": "Fix text typed with the wrong keyboard layout.",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "type": "dropdown",
      "name": "layoutEN",
      "title": "English Input Source",
      "description": "English Input Source after fix",
      "required": false,
      "default": "English – Ilya Birman Typography",
      "data": [
        {
          "title": "English – Ilya Birman Typography",
          "value": "English – Ilya Birman Typography"
        },
        {
          "title": "ABC",
          "value": "ABC"
        }
      ]
    },
    {
      "type": "dropdown",
      "name": "layoutRU",
      "title": "Russian Input Source",
      "description": "Russian Input Source after fix",
      "required": false,
      "default": "Russian – Ilya Birman Typography",
      "data": [
        {
          "title": "Russian – Ilya Birman Typography",
          "value": "Russian – Ilya Birman Typography"
        },
        {
          "title": "Russian - PC",
          "value": "Russian - PC"
        },
        {
          "title": "Russian",
          "value": "Russian"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.5"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
